<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view_article"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@null"
    android:layout_marginBottom="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/article_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/article_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/article_image"
                android:layout_width="130dip"
                android:layout_height="130dip"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:contentDescription="Article image" />

        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/article_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/article_card_view"
            android:text="Section"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/article_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/article_section"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="Date"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/article_section"
            android:layout_alignParentEnd="true"
            android:paddingStart="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="30dp"
            android:paddingEnd="10dp"
            android:layout_toEndOf="@id/article_card_view"
            android:maxLines="3"
            android:text="Summary..."
            android:textStyle="italic"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="#8C8C8C"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>